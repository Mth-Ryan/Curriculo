@page "/"
@using Curriculo.Data
@inject LabelsService LabelsServ

<PageTitle>Index</PageTitle>

<SideBar LabelsContent="@labelsContents?.ExtraLabels" />
<MainContent LabelsContent="@labelsContents?.MainLabels" />

@code {
    public LanguageVariant Variant { get; set; } = Data.LanguageVariant.En;
    private Labels? labelsContents;

    protected override async Task OnInitializedAsync()
    {
        labelsContents = LabelsServ.GetLabels(Variant);
    }
}